#!/bin/sh

# Define your layouts
layouts="last layout\ntile\nfloating\nmonocle\ndeck\ngrid\nspiral\ndwindle"

# Show rofi in normal window mode with a list
choice=$(echo -e "$layouts" | rofi -show drun -modi "drun,run,window,layout" -dmenu -i -p "Select layout:" -theme ~/.config/rofi/arthur.rasi)

# Trigger corresponding signal
case "$choice" in
    "last layout")	xsetroot -name "fsignal:1" ;;
    tile)		xsetroot -name "fsignal:2" ;;
    floating)		xsetroot -name "fsignal:3" ;;
    monocle)		xsetroot -name "fsignal:4" ;;
    spiral) 		xsetroot -name "fsignal:5" ;;
    dwindle) 		xsetroot -name "fsignal:6" ;;
    deck) 		xsetroot -name "fsignal:7" ;;
    grid)		xsetroot -name "fsignal:8" ;;
esac

